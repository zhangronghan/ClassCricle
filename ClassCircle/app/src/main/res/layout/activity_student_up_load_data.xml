<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jia.classcircle.activity.activity.StudentUpLoadDataActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_up_load_data"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        app:title="上传资料"
        app:titleTextColor="#ffffff"
        android:background="#3399FF"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppToolbarPopupTheme"
        />
    <TextView
        android:layout_margin="5dp"
        android:textSize="18dp"
        android:text="文件路径:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textSize="17dp"
        android:id="@+id/tv_stu_up_data_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_up_load_data"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_margin="5dp"
            android:src="@drawable/publish_msg"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/img_file_url_select"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_margin="5dp"
            android:src="@drawable/get_file_url"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
