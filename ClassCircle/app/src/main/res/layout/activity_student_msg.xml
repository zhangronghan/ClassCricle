<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jia.classcircle.activity.activity.StudentMsgActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_stu_msg"
        app:title="班圈APP"
        app:titleTextColor="#ffffff"
        android:background="#3399FF"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <TextView
        android:id="@+id/tv_showStudentUserName"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:text="尊敬的XXX，请继续完善您的信息："
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/StudentHeadImageView"
        android:src="@drawable/default_head_image"
        android:scaleType="centerCrop"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:text="点我更改头像，否则为默认头像"
        android:layout_gravity="center"
        android:id="@+id/tv_chooseStudentImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="隶属班级:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:id="@+id/sp_getStudentYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="届"
                />
            <Spinner
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:id="@+id/sp_getStudentProfession"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="专业"
                />
            <Spinner
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:id="@+id/sp_getStudentClassNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="班"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginTop="30dp"
            android:text="学生注册日期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_registerStu_date"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:text="aaaaaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:layout_margin="5dp"
        android:id="@+id/btn_commitStudentMsg"
        android:background="@drawable/login_button_selector"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
